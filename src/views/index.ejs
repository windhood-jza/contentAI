      // 用户消息的简单格式化处理，只做基本的安全处理和换行处理
      function formatUserContent(content) {
        // 检查内容是否有效
        if (content === undefined || content === null) {
          return '<span class="text-danger">无法显示内容 (内容为空)</span>';
        }
        
        // 确保内容是字符串
        let textContent = String(content);
        
        try {
          // 只做简单的处理，防止内容被错误格式化
          // 替换换行符为<br>
          let formatted = textContent.replace(/\n/g, '<br>');
          
          // 对HTML特殊字符进行转义，防止XSS攻击
          formatted = formatted
            .replace(/&/g, '&amp;')
            .replace(/</g, '&lt;')
            .replace(/>/g, '&gt;')
            .replace(/"/g, '&quot;')
            .replace(/'/g, '&#039;');
          
          // 恢复已经转义的<br>标签
          formatted = formatted.replace(/&lt;br&gt;/g, '<br>');
          
          return formatted;
        } catch (error) {
          console.error('[运维助手前端] 格式化用户内容时出错:', error);
          return `<span class="text-danger">格式化内容出错: ${error.message}</span><br><pre>${textContent}</pre>`;
        }
      }
      
      // 格式化内容（处理换行符、代码块等），仅用于助手消息
      function formatContent(content) {
        console.log('[运维助手前端] 格式化内容, 类型:', typeof content);
        
        // 检查内容是否有效
        if (content === undefined || content === null) {
          console.error('[运维助手前端] 警告: 收到无效内容', content);
          return '<span class="text-danger">无法显示内容 (内容为空)</span>';
        }
        
        // 确保内容是字符串
        let textContent = String(content);
        
        try {
          console.log(`[运维助手前端] 格式化内容长度: ${textContent.length}`);
          console.log(`[运维助手前端] 内容前100字符: ${textContent.substring(0, 100).replace(/\n/g, '\\n')}`);
          
          // 移除多余的空行（3个以上连续换行符替换为2个）
          let formatted = textContent.replace(/\n{3,}/g, '\n\n');
          
          // 替换换行符为<br>
          formatted = formatted.replace(/\n/g, '<br>');
          
          // 处理非编软件问题和解决方案格式
          formatted = formatted.replace(/(非编[^<]{2,30})(：|:)?/g, '<h4>$1</h4>');
          formatted = formatted.replace(/解决方案(：|:)?/g, '<strong class="solution">解决方案: </strong>');
          
          // 处理"情况N"格式
          formatted = formatted.replace(/(情况\s*\d+)\s*(：|:)?/g, '<strong class="case">$1: </strong>');
          
          // 处理问题标记
          formatted = formatted.replace(/(问题|提示)(：|:)?/g, '<strong class="question">$1: </strong>');
          
          // 处理代码块
          formatted = formatted.replace(/```(.+?)```/gs, '<pre><code>$1</code></pre>');
          
          // 清理特殊控制字符
          formatted = formatted
            .replace(/\\u0013|\u0013/g, '')
            .replace(/\\u0015|\u0015/g, '')
            .replace(/\\u001e|\u001e/g, '')
            .replace(/\\u0001|\u0001/g, '[按钮]')
            .replace(/STYLEREF 1 \\\\s /g, '')
            .replace(/SEQ 图 \\\\\\* ARABIC \\\\s 1 /g, '');
          
          // 处理Markdown样式列表
          formatted = formatted.replace(/•\s+([^\n]+)/g, '<li>$1</li>');
          formatted = formatted.replace(/<li>(.+?)<\/li>/g, '<ul><li>$1</li></ul>');
          formatted = formatted.replace(/<\/ul>\s*<ul>/g, '');
          
          console.log('[运维助手前端] 格式化完成');
          return formatted;
        } catch (error) {
          console.error('[运维助手前端] 格式化内容时出错:', error);
          return `<span class="text-danger">格式化内容出错: ${error.message}</span><br><pre>${textContent}</pre>`;
        }
      }
      
